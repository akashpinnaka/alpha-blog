<h1 class="center">All alpha bloggers</h1>
<div class="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Delete user", user, method: :delete, data: {confirm: "Are you sure?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>